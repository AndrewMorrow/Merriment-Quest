<link rel="stylesheet" href="/stylesheets/loginSignup.css">
<main class= "container">
    <article>
        <div class="card mb-3">
            <div>
                <h4 class="card-header">Login</h4>
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label for="usernameField" class="form-label">Username</label>
                        <input
                            class="form-control"
                            id="user-name"
                            aria-describedby="Username Field"
                        />
                        <div id="usernameHelp" class="form-text">Requirements: 4 - 25 characters</div>
                    </div>
                    <div class="mb-3">
                        <label for="passwordField" class="form-label"
                            >Password</label
                        >
                        <input class="form-control" type="password" id="user-password" />
                        <div id="passwordHelp" class="form-text">Requirements: minimum 8 characters</div>
                    </div>
                    <button id="login-btn" type="submit" class="btn btn-primary mr-3">
                        Login
                    </button>
                    <a href="/signup">Sign up instead</a>
                </form>
            </div>
        </div>
    </article>
        <!-- Modal -->
<div class="modal fade" id="infoIncorrectModal" tabindex="-1" aria-labelledby="Password Match Modal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="errorOccurredInfo">Error Occurred</h5>
            <button type="button" class="close modalExit" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            Please check your credentials and try again.
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
        </div>
    </div>
</div>
        <!-- Modal -->
<div class="modal fade" id="fieldRequiredLoginModal" tabindex="-1" aria-labelledby="Password Match Modal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="errorOccurred">Error Occurred</h5>
            <button type="button" class="close modalExit" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            All fields are required.
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
        </div>
    </div>
</div>
</main>
{{> bootstrap-cdn}}
<script src="javascripts/login.js"></script>