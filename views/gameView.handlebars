<main class ="container">
<div class="card text-center mb-3 bg-transparent">
    <div class="card-header">
        <h5>Our closest match!</h5>
    </div>
    <div class="card-body">
        <h2 class="card-title game-name">{{game.name}}</h2>
        <p class="card-text">Released: {{game.released}}</p>
        <h5 class="card-text"> Ratings</h5>
        <p>Metacritic: {{game.metacritic}}</p>
        <div class="card-text mr-2 d-flex justify-content-around">
            {{#each game.ratings}}
            <h5>{{title}}: {{percent}}%</h5>
            {{/each}}
        </div>
        {{!-- <div class ="d-flex justify-content-around flex-wrap"> --}}
        <div id="game-screenshots" class="carousel slide mb-4" data-ride="carousel">
            <ol class="carousel-indicators">
                {{#each game.short_screenshots}}
                {{#if @first}}
            <li data-target="#game-screenshots" data-slide-to="{{@index}}" class="active"></li>
                {{else}}
            <li data-target="#game-screenshots" data-slide-to="{{@index}}"></li>
                {{/if}}
                {{/each}}
            </ol>
            <div class="carousel-inner">
                {{#each game.short_screenshots}}
                    {{#if @first}}
                        <div class= "carousel-item active">
                            <img src="{{image}}" class="d-block w-100" height="480">
                        </div>
                    {{else}}
                        <div class= "carousel-item">
                            <img src="{{image}}" class="d-block w-100"  height="480">
                        </div>
                    {{/if}}
                {{/each}}
            </div>
            <a class="carousel-control-prev" href="#game-screenshots" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#game-screenshots" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        {{!-- </div> --}}
        <div class="mb-2">
            <video src={{game.clip.clip}} height="420" controls></video>
            <p>Add a game to your watchlist to easily check a deal later.</p>
            <button class= "btn btn-dark add-watch-btn"> Add to watchlist </button>
        </div>
    </div>
    <div class="card-footer bg-transparent">
        <p>Not what you had in mind?</p>
        <a href="/gameFinder" class="btn btn-primary">Try again</a> 
    </div>
</div>

<div class="card text-center">
    <div class="card-header">
        <h5>Deals by Cheapshark!</h5>
    </div>
    <div class="card-body">
        {{#if cheapValue}}
        {{#each cheapData}}
        <div class= "border border-4 border-dark mb-3">
            <h4 class="card-title">{{title}}</h4>
        <div>
            <img src="{{thumb}}" width="110" height="60" class="rounded" >
            <p class= "card-text">Sale Price: {{salePrice}} vs. Normal Price: {{normalPrice}} </p>
            <a href="https://www.cheapshark.com/redirect?dealID={{dealID}}"class="btn btn-dark mb-2">Get Deal Here</a>
        </div>
        </div>
        {{/each}}
        {{else}}
        <h5> We are sorry but no deals were found for this title. </h5>
        {{/if}}
    
    <div class="card-footer">
        <p>Not what you had in mind?</p>
        <a href="/gameFinder" class="btn btn-primary">Try again</a>
    </div>
</div>
</main>
{{> bootstrap-cdn}}
<script src="/javascripts/gameView.js"></script>